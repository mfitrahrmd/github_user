
<resources>
    <style name="Theme.GithubUser" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary200</item>
        <item name="colorOnPrimary">@color/colorPrimary400</item>
        <item name="colorSecondary">@color/colorSecondary100</item>
        <item name="colorSecondaryVariant">@color/colorSecondary200</item>
        <item name="colorOnSecondary">@color/contentTextColor</item>
        <item name="android:colorBackground">@color/contentBodyColor</item>

        <item name="strokeColor">@color/strokeColor</item>

        <item name="android:textColorPrimary">@color/contentTextColor</item>

        <item name="android:fontFamily">@font/jost</item>
    </style>

    <style name="Theme.GithubUser.Neo">
        <item name="android:background">@drawable/neo</item>
        <item name="android:stateListAnimator">@animator/pressed_animation</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="Theme.GithubUser.RoundedSquareImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="Theme.GithubUser.CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.GithubUser.PillTextView" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:background">@drawable/neo</item>
    </style>
</resources>
