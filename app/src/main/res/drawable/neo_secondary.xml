<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item  android:left="6dp" android:top="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/colorOnSecondary" />
                    <corners android:radius="6dp" />
                </shape>
            </item>

            <item android:top="3dp" android:left="3dp" android:bottom="3dp" android:right="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/colorSecondary" />
                    <stroke android:width="1dp" android:color="?attr/strokeColor" />
                    <corners android:radius="6dp"  />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="3dp" android:left="3dp" android:bottom="3dp" android:right="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/colorSecondary" />
                    <stroke android:width="1dp" android:color="?attr/strokeColor" />
                    <corners android:radius="6dp"  />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>