<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:left="6dp" android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/blackLight" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item android:top="3dp" android:left="3dp" android:bottom="3dp" android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
            <stroke android:width="1dp" android:color="@color/blackLight" />
            <corners android:radius="6dp"  />
        </shape>
    </item>
</layer-list>